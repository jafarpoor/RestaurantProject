@model EndPoint.Site.ViewModels.LoginViewModel
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- font-awesome -->
    <link rel="stylesheet" href="~/Theme/assets/css/font-awesome.min.css">
    <!-- Bootstrap 4.5.3 -->
    <link rel="stylesheet" href="~/Theme/assets/bootstrap/css/bootstrap.min.css">
    <!-- CSS Implementing Plugins -->
    <link rel="stylesheet" href="~/Theme/assets/css/plugins/apexcharts.css">
    <link rel="stylesheet" href="~/Theme/assets/css/plugins/jquery.classycountdown.min.css">
    <link rel="stylesheet" href="~/Theme/assets/css/plugins/nouislider.min.css">
    <link rel="stylesheet" href="~/Theme/assets/css/plugins/select2.min.css">
    <link rel="stylesheet" href="~/Theme/assets/css/plugins/swiper.min.css">
    <!-- CSS Template -->
    <link rel="stylesheet" href="~/Theme/assets/css/theme.css">
    <!-- Here goes your custom.css -->
    <link rel="stylesheet" href="~/Theme/assets/css/custom.css">
    <!-- colors: amber,blue,brown,cyan,default,green,indigo,orange,pink,purple,red,teal,yellow -->
    <link rel="stylesheet" href="~/Theme/assets/css/colors/default.css" id="colorswitch">
</head>

<body>
    <div class="page-wrapper auth-page-wrapper">

        <!-- Page Content -->
        <main class="page-content">
            <div class="container">
                <div class="auth-wrapper">
                    <div class="auth-form shadow-around">
                        <div class="site-logo">
                            <a href="#">
                                <img src="./assets/images/logo.png" alt="logo">
                            </a>
                        </div>
                        <div class="auth-form-title">
                            ورود به رستورانت
                        </div>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-element-row">
                                <label asp-for="Email" for="phone-number" class="label-element">ایمیل</label>
                                <div class="form-element-with-icon">
                                    <input asp-for="Email" type="text" class="input-element" id="phone-number">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <i class="fad fa-mobile-alt"></i>
                                </div>
                            </div>
                            <div class="form-element-row">
                                <label asp-for="Password" for="password" class="label-element">
                                    <span class="d-flex justify-content-between">
                                        <span>کلمه عبور</span>
                                        <a href="#" class="link--with-border-bottom">رمز عبور خود را فراموش کرده&zwnj;ام</a>
                                    </span>
                                </label>
                                <div class="form-element-with-icon">
                                    <input asp-for="Password" type="password" class="input-element" id="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <i class="fad fa-key-skeleton"></i>
                                </div>
                            </div>
                            <div class="form-element-row">
                                <label class="container-checkbox">
                                    مرا به خاطر داشته باش
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <input type="hidden" asp-for="ReturnUrl" class="form-control" />

                            <div class="form-element-row text-left">
                                <button class="btn-element btn-info-element">
                                    <i class="fad fa-sign-in-alt"></i>
                                    ورود به رستورانت
                                </button>
                            </div>

                        </form>
                        <div class="auth-form-footer">
                            <span>کاربر جدید هستید؟</span>
                            <a asp-action="Login" class="link--with-border-bottom">ثبت نام در رستورانت</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- end Page Content -->
        <!-- Page mini-Footer -->
        <footer class="mini-footer">
            <div class="container main-container">
                <div class="row">
                    <div class="col-12 mt-2 mb-3">
                        <div class="footer-light-text">
                            استفاده از مطالب فروشگاه اینترنتی همتا فقط برای مقاصد غیرتجاری و با ذکر منبع بلامانع است..
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <div class="copy-right-mini-footer">
                            © All rights reserved. Designed by BahramiiiRad
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Page mini-Footer -->

    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

